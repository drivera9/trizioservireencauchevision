<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="trizio.ram.com.triziocomandroidgradlenuevo.Recepcion"
    android:id="@+id/procesos"
    >

    <ImageView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="camara"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/textView_atributo"
        android:autoText="false"
        android:textColor="#ff000000"
        android:textSize="35dp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_texto"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_below="@+id/textView_atributo"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:maxLength="300"
        android:maxLines="1"
        android:lines="1"
        android:inputType="textPersonName"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:id="@+id/button3"
        android:onClick="cancelar"
        android:layout_alignTop="@+id/button_OK"
        android:layout_toRightOf="@+id/imageButton6"
        android:layout_toEndOf="@+id/imageButton6" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton6"
        android:onClick="anteriorPrimero"
        android:background="@drawable/leftall"
        android:layout_below="@+id/textView17"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton7"
        android:onClick="atras"
        android:background="@drawable/arrow_left"
        android:backgroundTint="#ff010101"
        android:layout_below="@+id/textView17"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton8"
        android:background="@drawable/arrow_right"
        android:backgroundTint="#ff000000"
        android:layout_below="@+id/textView17"
        android:layout_alignLeft="@+id/button_OK"
        android:layout_alignStart="@+id/button_OK" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton9"
        android:background="@drawable/right_all_2"
        android:onClick="anteriorUltimo"
        android:layout_below="@+id/textView17"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        android:layout_below="@+id/editText_texto"
        android:layout_alignRight="@+id/imageButton9"
        android:layout_alignEnd="@+id/imageButton9"
        android:layout_alignLeft="@+id/imageButton6"
        android:layout_alignStart="@+id/imageButton6"
        android:gravity="center"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Ver"
        android:id="@+id/button5"
        android:layout_below="@+id/imageView"
        android:layout_toRightOf="@+id/editText_texto"
        android:layout_toEndOf="@+id/editText_texto"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/button_OK"
        android:onClick="ok"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/editText_texto"
        android:layout_alignEnd="@+id/editText_texto" />

</RelativeLayout>
